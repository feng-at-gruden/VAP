@model IEnumerable<MemberCenter.Models.LockedCoinsViewModel>
@{
    ViewBag.Title = "积分解冻";
}

<h1 class="page-header">@ViewBag.Title</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        MY COINS
        <div class="right"><b>总投资额：</b>2000000   <b style="margin-left:100px;">总解冻额</b>：2000000</div>
    </div>
    <div class="panel-body">

        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr class="success">
                        <th>报单单号</th>
                        <th>报单时间</th>
                        <th>报单数量</th>
                        <th>报单价格</th>
                        <th>上次解冻价格</th>
                        <th>下次解冻价格</th>
                        <th>已解冻</th>
                        <th>剩余</th>
                        <th>状态</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) 
                {
                    <tr class="odd">
                        <td>@Html.DisplayFor(modelItem => item.BaoDanId)</td>
                        <td>@Html.DisplayFor(modelItem => item.BaoDanTime)</td>
                        <td>@Html.DisplayFor(modelItem => item.BaoDanQuantity)</td>
                        <td>￥@Html.DisplayFor(modelItem => item.BaoDanPrice)</td>
                        <td>￥@Html.DisplayFor(modelItem => item.LastPrice)</td>
                        <td>￥@Html.DisplayFor(modelItem => item.NextPrice)</td>
                        <td>@Html.DisplayFor(modelItem => item.AvailableAmount)</td>
                        <td>@Html.DisplayFor(modelItem => item.LockedAmount)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <!-- /.Table -->
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        &nbsp;
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            "responsive": true,
            "paging": true,
            "ordering": false,
            "info": false,
            "searching": false,
        });
    });
</script>