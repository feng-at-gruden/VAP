@model IEnumerable<MemberCenter.Models.BaoDanHistoryViewModel>
@{
    ViewBag.Title = "交易记录";
}

<div class="panel panel-default">
    <div class="panel-heading">
        TRANSACTION RECORDS
    </div>
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr class="error">
                        <th>委托时间</th>
                        <th>委托类别</th>
                        <th>数量</th>
                        <th>金额</th>
                        <th>手续费</th>
                        <th>委托价格</th>
                        <th>成交数量</th>
                        <th>成交金额</th>
                        <th>均价</th>
                        <!--<th>状态</th>-->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) 
                    { 
                    <tr class="odd">
                        <td>@Html.DisplayFor(modelItem => item.BaoDanTime)</td>
                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                        <td style="text-align:right;">@Html.DisplayFor(modelItem => item.RequestQuantity)</td>
                        <td style="text-align:right;">￥@Html.DisplayFor(modelItem => item.RequestCash)</td>
                        <td style="text-align:right;">￥@Html.DisplayFor(modelItem => item.Fee)</td>
                        <td style="text-align:right;">￥@Html.DisplayFor(modelItem => item.RequestPrice)</td>
                        <td style="text-align:right;">@Html.DisplayFor(modelItem => item.FinalQuantity)</td>
                        <td style="text-align:right;">￥@Html.DisplayFor(modelItem => item.FinalCash)</td>
                        <td style="text-align:right;">￥@Html.DisplayFor(modelItem => item.FinalPrice)</td>
                        <!--<td>@Html.DisplayFor(modelItem => item.Status)</td>-->
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.Table -->
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        &nbsp;
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            "responsive": true,
            "paging": true,
            "ordering": true,
            "info": false,
            "searching": false,
        });
    });
</script>