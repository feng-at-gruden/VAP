<!DOCTYPE html>
<html lang="zh-cn">
<!--[if IE 9 ]><html class="ie9"><![endif]-->
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <meta charset="UTF-8">

    <title>联合通用积分会员系统 - @ViewBag.Title</title>

    <!-- CSS -->
    @Styles.Render("~/Content/new-skin/css/bootstrap.min.css")
    @Styles.Render("~/Content/new-skin/css/animate.min.css")
    @Styles.Render("~/Content/new-skin/css/font-awesome.min.css")
    @Styles.Render("~/Content/new-skin/css/form.css")
    @Styles.Render("~/Content/new-skin/css/calendar.css")
    @Styles.Render("~/Content/new-skin/css/style.css")
    @Styles.Render("~/Content/new-skin/css/icons.css")
    @Styles.Render("~/Content/new-skin/css/generics.css")
    <!-- DataTables CSS -->
    @Styles.Render("~/Content/new-skin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css")

    <link rel="shortcut icon" href="~/Content/new-skin/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/new-skin/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/new-skin/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/new-skin/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/new-skin/images/ico/apple-touch-icon-57-precomposed.png">

    <!-- Javascript Libraries -->
    <!-- jQuery -->
    @Scripts.Render("~/Content/new-skin/bower_components/jquery/dist/jquery.min.js")
    @Scripts.Render("~/Content/new-skin/js/jquery-ui.min.js") <!-- jQuery UI -->
    @Scripts.Render("~/Content/new-skin/js/jquery.easing.1.3.js") <!-- jQuery Easing - Requirred for Lightbox + Pie Charts-->
    <!-- Bootstrap -->
    @Scripts.Render("~/Content/new-skin/js/bootstrap.min.js")

    <!-- Charts -->
    @Scripts.Render("~/Content/new-skin/js/charts/jquery.flot.js") <!-- Flot Main -->
    @Scripts.Render("~/Content/new-skin/js/charts/jquery.flot.time.js") <!-- Flot sub -->
    @Scripts.Render("~/Content/new-skin/js/charts/jquery.flot.animator.min.js") <!-- Flot sub -->
    @Scripts.Render("~/Content/new-skin/js/charts/jquery.flot.resize.min.js") <!-- Flot sub - for repaint when resizing the screen -->
    
    @Scripts.Render("~/Content/new-skin/bower_components/jquery.cookie.js")

    <!-- DataTables JavaScript -->
    @Scripts.Render("~/Content/new-skin/bower_components/datatables/media/js/jquery.dataTables.js")
    @Scripts.Render("~/Content/new-skin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js")

    @Scripts.Render("~/Content/new-skin/js/sparkline.min.js") <!-- Sparkline - Tiny charts -->
    @Scripts.Render("~/Content/new-skin/js/easypiechart.js") <!-- EasyPieChart - Animated Pie Charts -->
    @Scripts.Render("~/Content/new-skin/js/charts.js") <!-- All the above chart related functions -->
    <!-- All JS functions -->
    @Scripts.Render("~/Content/new-skin/js/functions.js")
</head>
<body id="skin-blur-ocean">

    <header id="header" class="media">
        <a href="" id="menu-toggle"></a>
        @Html.ActionLink("联合通用积分会员系统", "Index", "Home", null, new { @class = "logo pull-left" })

        <!--Top Toolkit-->
        <div class="media-body">
            <div class="media" id="top-menu">

                <div class="pull-left tm-icon">
                    <a data-drawer="notifications" class="drawer-toggle" href="#">
                        <i class="sa-top-updates"></i>
                        <i class="n-count animated hide">9</i>
                        <span>新闻中心</span>
                    </a>
                </div>

                <div id="time" class="pull-right">
                    当前时间： <span id="hours"></span>:<span id="min"></span>:<span id="sec"></span>
                </div>

                <div class="media-body">
                    <input type="text" class="main-search">
                </div>
            </div>
        </div>
    </header>

    <div class="clearfix"></div>

    <section id="main" class="p-relative" role="main">

        <!-- Sidebar -->
        <aside id="sidebar">

            <!-- Sidbar Widgets -->
            @Html.Partial("NewSkin/_MyAccountPartial")

            @Html.Partial("NewSkin/_Navigation")

        </aside>

        <!-- Content -->
        <section id="content" class="container">

            @Html.Partial("NewSkin/_NewsListPartial")

            <!-- Page Content -->
            <div id="page-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="page-title" style="margin-bottom:20px;">@ViewBag.Title</h4>

                            @RenderBody()
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /#page-wrapper -->

        </section>

    </section>


</body>
</html>
