@model IEnumerable<MemberCenter.Models.CashTransactionViewModel>
@{
    ViewBag.Title = "资金记录";
}

<div class="panel panel-default">
    <div class="panel-heading">
        TRANSACTION RECORDS
    </div>
    <div class="panel-body">
        <div class="dataTable_wrapper">
            <table class="table table-striped table-bordered" id="dataTables-example" style="text-align:center;">
                <thead>
                    <tr class="primary">
                        <th class="center-cell">@Html.DisplayNameFor(m => m.ID)</th>
                        <th style="text-align:right;">@Html.DisplayNameFor(m => m.Amount)</th>
                        <th style="text-align:right;">@Html.DisplayNameFor(m => m.Fee)</th>
                        <th class="center-cell">@Html.DisplayNameFor(m => m.Type)</th>
                        <th class="center-cell">@Html.DisplayNameFor(m => m.DateTime)</th>
                        <th class="center-cell">@Html.DisplayNameFor(m => m.Status)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd">
                            <td>@Html.DisplayFor(modelItem => item.ID)</td>
                            <td style="text-align:right;">@Html.DisplayFor(modelItem => item.Amount)</td>
                            <td style="text-align:right;">@Html.DisplayFor(modelItem => item.Fee)</td>
                            <td>@Html.DisplayFor(modelItem => item.Type)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateTime)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.Table -->
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        &nbsp;
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            "responsive": true,
            "paging": true,
            "ordering": false,
            "info": false,
            "searching": false,
        });
    });
</script>