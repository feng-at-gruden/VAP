@model MemberCenter.Models.CashWithdrawViewModel
@{
    ViewBag.Title = "现金提现";    
}
<div class="row">
    <h1 class="page-header">@ViewBag.Title</h1>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                CASH WITHDRAW
            </div>
            <div class="panel-body">

                <div class="well">
                    <p><b>重要提示：</b>当前账户可提金额为￥@Html.DisplayFor(m=>m.AvailableAmount)。为了您的账户安全，每次现金提现的最高额度为￥@Html.DisplayFor(m => m.MaxWithdrawAmount)，提现最低额度为￥@Html.DisplayFor(m => m.MinWithdrawAmount)，每笔手续费为￥@Html.DisplayFor(m => m.Fee)，如果您有更高的需求，请与网站客服联系，不同银行实际到账时间可能会有延迟。</p>
                </div>

                @using (Html.BeginForm("CashWithdraw", "Transaction", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    if(!ViewData.ModelState.IsValid)
                    { 
                        <div class="alert alert-danger">
                            @Html.ValidationSummary()
                        </div>
                    }
                    if (ViewBag.ActionMessage != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.ActionMessage
                        </div>
                    }
                    if(Model.BankInfoId==0)
                    {
                        <div class="form-group">
                            <a href="#" class="right">请设置提现银行帐号信息</a>
                            <br class="clear" />
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <span class="left">提现方式：银行卡</span>
                            <a href="#" class="right">修改银行卡提现信息</a>
                            <br class="clear" />
                        </div>
                    }
                    <div class="form-group input-group">
                        @Html.TextBoxFor(m => m.RequestAmount, new { @class = "form-control", placeholder = "提现金额", maxlength = "30" })
                        <span class="input-group-addon">提现金额</span>
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "交易密码", maxlength = "20" })
                    </div>
                    <button type="submit" class="btn btn-warning btn-block">确定提现</button>

                }
                <!-- /.form -->

            </div>
            <!-- /.panel-body -->
            <div class="panel-footer">
                &nbsp;
            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <h4 class="right"><b>提现记录</b> Withdraw Records</h4>
    <table class="table table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>提现时间</th>
                <th>提交金额</th>
                <th>手续费</th>
                <th>银行</th>
                <th>提现账户</th>
                <th>状态</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.WithdrawHistory)
        {
            <tr class="odd gradeX">
                <td>@Html.DisplayFor(modelItem => item.WithdrawTime)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.Fee)</td>
                <td class="center">@Html.DisplayFor(modelItem => item.Bank)</td>
                <td class="center">@Html.DisplayFor(modelItem => item.BankAccount)</td>
                <td class="center">@Html.DisplayFor(modelItem => item.Status)</td>
            </tr>
        }
        </tbody>
    </table>
    <!-- /.Tbale -->
</div>
<!-- /.row -->