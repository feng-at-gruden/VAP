@model IEnumerable<Backend.Models.CashWithdrawHistoryViewModel>

@{
    ViewBag.Title = "待审批现金提现";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var total = 0m;
}

<div class="place">
    <span>位置：</span>
    <ul class="placeul">
        <li><a href="@Url.Action("Index","Home")">首页</a></li>
        <li><a href="#">待审批现金提现</a></li>
    </ul>
</div>
