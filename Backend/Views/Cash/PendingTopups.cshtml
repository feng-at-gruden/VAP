    <div class="formtitle"><span>待审批现金充值列表</span></div>
    <table @*class="tablelist"*@ id="dataTable-Topups">
        <thead>
            <tr>
                <th>
                    会员账号
                </th>
                <th>
                    会员UID
                </th>
                <th>
                    金额
                </th>
                <th>
                    类型
                </th>
                <th>
                    状态
                </th>
                <th>
                    银行
                </th>
                <th>
                    申请时间
                </th>

                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Member.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MemberId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bank)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>

                    <td>
                        @Html.ActionLink("批准", "ApproveCashTrans", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
