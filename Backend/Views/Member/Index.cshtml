@model IEnumerable<Backend.Models.Member>

@{
    ViewBag.Title = "会员管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="place">
    <span>位置：</span>
    <ul class="placeul">
        <li><a href="@Url.Action("Index","Home")">首页</a></li>
        <li><a href="#">会员管理</a></li>
    </ul>
</div>
<div class="formbody">
    <ul class="seachform1">

        <li><label>会员账号</label><input name="" type="text" class="scinput1" /></li>
        <li>
            <label>会员UID</label>
            <input name="" type="text" class="scinput1" />
        </li>

        <li>
            <label>会员状态</label>
            <select class="scinput1">
                <option>全部</option>
                <option>待审核</option>
                <option>正常</option>
                <option>锁定</option>
            </select>
        </li>


    </ul>



    <ul class="seachform1">
        <li class="sarchbtn">
            <label>&nbsp;</label>
            <input name="" type="button" class="scbtn" onclick="" value="查询" />
            <input name="" type="button" class="scbtn2" value="导出" />
        </li>
    </ul>
    @*<a class="btn-primary" href="@Url.Action("CreateUser","Admin")">新建账号</a>*@




    <div class="formtitle"><span>会员列表</span></div>
    <table class="tablelist">
        <tr>
            <th>
                会员UID
            </th>
            <th>
                推荐人UID
            </th>
            <th>
                登录名
            </th>
            <th>
                会员状态
            </th>
            <th>
                提现状态
            </th>
            <th>
                提币状态
            </th>
            <th>
                昵称
            </th>
            <th>
                真实姓名
            </th>
            <th>
                会员等级
            </th>

            <th>操作</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Referral_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TiXianStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TiBiStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberLevel.Level)
                </td>


                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>