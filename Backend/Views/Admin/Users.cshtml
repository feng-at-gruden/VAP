@model IEnumerable<Backend.Models.AspNetUser>

@{
    ViewBag.Title = "账号管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="place">
    <span>位置：</span>
    <ul class="placeul">
        <li><a href="#">首页</a></li>
        <li><a href="#">后台账号管理</a></li>
    </ul>
</div>
<ul class="seachform1">

    <li><label>项目名称</label><input name="" type="text" class="scinput1" /></li>
    <li>
        <label>学校名称</label>
        <div class="vocation">
            <select class="select3">
                <option>全部</option>
                <option>其他</option>
            </select>
        </div>
    </li>

    <li>
        <label>项目状态</label>
        <div class="vocation">
            <select class="select3">
                <option>全部</option>
                <option>其他</option>
            </select>
        </div>
    </li>


</ul>

<ul class="seachform2">

    <li><label>项目编号</label><input name="" type="text" class="scinput1" /></li>
    <li>
        <label>项目类型</label>
        <div class="vocation">
            <select class="select3">
                <option>全部</option>
                <option>其他</option>
            </select>
        </div>
    </li>

    <li>
        <label>项目领域</label>
        <div class="vocation">
            <select class="select3">
                <option>全部</option>
                <option>其他</option>
            </select>
        </div>
    </li>

    <li><label>立项部门</label><input name="" type="text" class="scinput1" /></li>
    <li><label>经费范围</label><input name="" type="text" class="scinput1" /></li>
    <li><label>一</label><input name="" type="text" class="scinput1" /></li>
    <li><label>负责人</label><input name="" type="text" class="scinput1" /></li>
    <li><label>立项时间</label><input name="" type="text" class="scinput1" /></li>
    <li><label>一</label><input name="" type="text" class="scinput1" /></li>


</ul>


<ul class="seachform1">
    <li class="sarchbtn">
        <label>&nbsp;</label>
        <input name="" type="button" class="scbtn" onclick="" value="查询" />
        <input name="" type="button" class="scbtn1" value="更多条件" />
        <input name="" type="button" class="scbtn2" value="导出" />
    </li>
</ul>
<a class="btn-primary" href="@Url.Action("CreateUser","Admin")">新建账号</a>

<div class="formtitle"><span>后台账号列表</span></div>
<table class="tablelist">
    <tr>
        <th style="width: 30%">
            用户名
        </th>
        <th>
            角色
        </th>
        <th>
            状态
        </th>


        <th style="width: 20%">操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetRoles.FirstOrDefault().Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>


            <td>
                @Html.ActionLink("重置密码", "ResetPassword", new { uid = item.Id },new{@class="tablelink"}) |
                @Html.ActionLink("修改", "EditUser", new { uid = item.Id }, new { @class = "tablelink" })

            </td>
        </tr>
    }

</table>
