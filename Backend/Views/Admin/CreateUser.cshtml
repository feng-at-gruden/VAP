@using Backend.Models
@model Backend.Models.AspNetUser

@{
    ViewBag.Title = "创建账号";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>新建账号</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, "账号",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                <span class="help-block">提示: 账号默认初始密码为 Abc123456 </span>
            </div>
        </div>
       
        <div class="form-group">
            @Html.LabelFor(model => model.AspNetRoles, "角色", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @{
                    var roleOption = new List<SelectListItem>();
                    roleOption.Insert(0, new SelectListItem
                    {
                        Text = "客服",
                        Value = "CustomerService",
                        Selected = ViewBag.RoleType == "CustomerService"
                    });
                    roleOption.Insert(1, new SelectListItem
                    {
                        Text = "财务",
                        Value = "Finance",
                        Selected = ViewBag.RoleType == "Finance"
                    });
                   
                    roleOption.Insert(2, new SelectListItem
                    {
                        Text = "管理员",
                        Value = "Admin",
                        Selected = ViewBag.RoleType == "Admin"
                    });
                }
                @Html.DropDownList("roleType", roleOption, new { @class = "form-control" })<br />

            </div>
        </div>

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="创建" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回", "Users")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
