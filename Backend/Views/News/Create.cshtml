@model Backend.Models.News

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="place">
    <span>位置：</span>
    <ul class="placeul">
        <li><a href="@Url.Action("Index","Home")">首页</a></li>
        <li><a href="#">添加新闻</a></li>
    </ul>
</div>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="formbody">
       
        @Html.ValidationSummary(true)
        <ul class="forminfo">
            <li>
                <label>新闻标题<b>*</b></label>
                @Html.TextBoxFor(model => model.Title, new { @class = "dfinput", placeholder = "请填写新闻标题" })
                @Html.ValidationMessageFor(model => model.Title)
            </li>
            
            <li>
                <label>新闻分类<b>*</b></label>
                
                @{
                    var roleOption = new List<SelectListItem>();
                    roleOption.Insert(0, new SelectListItem
                    {
                        Text = "站内新闻",
                        Value = "3"
                    });
                    roleOption.Insert(1, new SelectListItem
                    {
                        Text = "站外新闻",
                        Value = "2"
                    });

                    roleOption.Insert(2, new SelectListItem
                    {
                        Text = "公告",
                        Value = "1"
                    });
                }
                @Html.DropDownListFor(model => model.Type, roleOption, new { @class = "dfinput" })<br />
            </li>
            <li>
                <label>新闻内容<b>*</b></label>

                @Html.TextAreaFor(model => model.Content, new { id = "newContent", style = "width:700px;height:250px;visibility:hidden;" })
                @* <textarea id="newContent" name="content" style="width:700px;height:250px;visibility:hidden;"></textarea>
                *@
                @Html.ValidationMessageFor(model => model.Content)
            </li>
            <li><label>&nbsp;</label><input name="" type="submit" class="btn" value="马上发布" /></li>


    </ul>       

          
            
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript" src="~/Content/editor/kindeditor.js"></script>

<script type="text/javascript">
    KE.show({
        id: 'newContent',
        cssPath: './index.css'
    });
</script>
